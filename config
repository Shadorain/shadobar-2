# Launcher {{{
[module/launcher]
type=custom/text
content = 
content-font=5
content-foreground=${colors.foreground}
content-padding=2
click-left=~/.config/shadobar/scripts/launcher
# }}}
# XWindow {{{
[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
label-color1 = ${colors.foreground} 
label-background = ${colors.background} 
# }}}
# Bspwm {{{
[module/bspwm]
type = internal/bspwm
enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;一
ws-icon-1 = 2;二
ws-icon-2 = 3;三
ws-icon-3 = 4;四
ws-icon-4 = 5;五
ws-icon-5 = 6;六
ws-icon-6 = 7;七
ws-icon-7 = 8;八
ws-icon-8 = 9;九
ws-icon-9 = 0;十
ws-icon-default = " "

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = ${colors.workspace_focused}
label-focused-overline = ${colors.uo_linecolor}
label-focused-padding = 2
label-focused-foreground = ${colors.uo_linecolor}

label-occupied = %icon%
label-occupied-padding = 2
label-occupied-background = ${colors.background}

label-urgent = %icon%
label-urgent-background = ${colors.workspace_urgent}
label-urgent-padding = 2

label-empty = %icon%
label-empty-background = ${colors.background}
label-empty-padding = 2
label-empty-foreground = ${colors.workspace_empty}

label-monocle = "%{A1:bspc desktop -l next:}  %{A}"
label-foreground = ${colors.foreground}
label-tiled = "%{A1:bspc desktop -l next:}  %{A}"
label-tiled-foreground = ${colors.tile_grid}
label-floating = "%{A1:bspc node focused.tiled -t floating || bspc node focused.floating -t tiled:}  %{A}"
label-floating-foreground = ${colors.foreground}
label-fullscreen = "%{A1:~/.config/shadobar/scripts/bspfullscreen:}  %{A}"
label-fullscreen-foreground = ${colors.mint_accent}
label-locked = "%{A1:bspc desktop -l next:}  %{A}"
label-locked-foreground = ${colors.mint_accent}
label-sticky = "%{A1:bspc desktop -l next:}  %{A}"
label-sticky-foreground = ${colors.foreground}
label-private = "%{A1:bspc desktop -l next:}  %{A}"
label-private-foreground = ${colors.mint_accent}
label-hidden = "%{A1:bspc desktop -l next:}  %{A}"
label-hidden-foreground = ${colors.foreground}

label-dimmed-foreground = ${colors.workspace_dim}

format-foreground = ${colors.foreground}
format-background = ${colors.background}
# }}}
